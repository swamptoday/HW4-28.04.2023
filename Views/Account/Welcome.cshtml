@model Welcome

    <header class="py-5">
        <div class="container px-5 pb-5">
            <div class="row gx-5 align-items-center">
                <div class="col-xxl-8">
                    <!-- Header text content-->
                    <div class="text-center text-xxl-start">
                        <div class="badge bg-gradient-primary-to-secondary text-white "><div class="text-uppercase">Learn &middot; Practice &middot; Develop</div></div>
                        <h1 class="display-3 fw-bolder mb-5"><span class="text-gradient d-inline">Welcome, @Model.first_name @Model.last_name</span></h1>
                        <div class="fs-3 fw-light text-muted mb-4">I, @Model.first_name @Model.last_name (e-mail: @Model.w_email), <br>have become ASP .NET developer!</div>
                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xxl-start mb-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3 me-sm-3 fs-6 fw-bolder">Home</a>
                        </div>

                    </div>
                </div>
                <div class="col-xxl-4">
                    <!-- Header profile picture-->
                    <div class="d-flex justify-content-center mt-5 mt-xxl-0">
                        <div class="profile bg-gradient-primary-to-secondary">

                            <img class="profile-img" src="/images/welcome.jpg" alt="..." />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>